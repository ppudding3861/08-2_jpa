<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="jpatest">
        <!--Member라는 클래스를 entity로 취급해라.-->
        <class>com.ohgiraffes.mappling.section01.entity.Member</class>
        <class>com.ohgiraffes.mappling.section02.column.Member</class>
        <class>com.ohgiraffes.mappling.section03.primarykey.table.Member</class>
        <class>com.ohgiraffes.mappling.section04.enumtype.Member</class>
        <class>com.ohgiraffes.mappling.section05.access.Member</class>
        <class>com.ohgiraffes.mappling.section05.property.Member</class>
        <class>com.ohgiraffes.mappling.section06.compositekey.Member</class>
        <class>com.ohgiraffes.mappling.section06.idclass.Member</class>
        <properties>
            <!--데이터베이스 연결을 위한 환경정보-->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gangnam"/>
            <property name="jakarta.persistence.jdbc.user" value="gangnam"/>
            <property name="jakarta.persistence.jdbc.password" value="gangnam"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--데이터의 구조를 바꾸는게 ddl. create라고 라고 하면 데이터를 만들겠다-->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>